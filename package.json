{
  "name": "leiasabores",
  "version": "1.0.0",
  "description": "E-commerce de alta performance com Cloudflare, React 18 e Hono.js",
  "type": "module",
  "main": "backend/src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "dev:backend": "wrangler dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "build:backend": "esbuild backend/src/index.ts --bundle --platform=node --target=es2020 --outfile=dist/backend/index.js",
    "deploy": "npm run build && wrangler deploy",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:e2e:setup": "playwright install",
    "preview": "vite preview --config frontend/vite.config.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.4.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.3",
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.3.0",
    "@tanstack/react-query": "^5.28.0",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.29.0",
    "framer-motion": "^12.23.24",
    "hono": "^4.10.4",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "sonner": "^1.7.2",
    "stripe": "^14.16.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.0",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.0",
    "drizzle-kit": "^0.31.6",
    "esbuild": "^0.25.12",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "miniflare": "^3.20231218.1",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "recharts": "^2.10.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.44.0",
    "typescript": "^5.3.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "wrangler": "^4.45.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.12"
  },
  "resolutions": {
    "esbuild": "^0.25.12"
  }
}
