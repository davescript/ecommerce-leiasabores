# Cloudflare Pages Headers - FORÇAR NO CACHE TOTAL
# Versão 6.0 - FORÇA ATUALIZAÇÃO

# NUNCA cachear index.html
/index.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  X-Content-Type-Options: nosniff
  X-Force-Update: v6.0

# NUNCA cachear admin
/admin
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  X-Force-Update: v6.0

# NUNCA cachear qualquer coisa do admin
/admin/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  X-Force-Update: v6.0

# Arquivo de força de atualização
/force-update.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Assets JS/CSS também sem cache por enquanto
/*.js
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache

/*.css
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
